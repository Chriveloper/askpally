---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import DevelopmentNotice from "@components/sections/misc/DevelopmentNotice.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/askpally.avif";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import security from "@images/security-image.avif";
---

<MainLayout>
  <HeroSection
    title=`AskPally: Jede Frage verdient eine <span class="text-purple-400 dark:text-purple-300">Antwort</span>.`
    subTitle="Der sprechende Lernbegleiter, der kindliche Neugier fördert und Bildungschancen gerechter macht."
    withReview={false}
    src={heroImage}
    alt="AskPally interaktives Plüschtier"
  />

  <FeaturesGeneral
    title="Warum AskPally?"
    subTitle="Die Herausforderungen, die AskPally löst: Bildungslücken schließen, Wortschatz erweitern, Bildschirmzeit reduzieren und die Eltern-Kind-Interaktion stärken."
    src={featureImage}
    alt="AskPally in einer Lernumgebung"
    features={features}
  />

  <FeaturesNavs
    title=`So <span class="text-purple-400 dark:text-purple-300">funktioniert AskPally</span>`
    tabs={[
      {
        heading: "Interaktives Lernen",
        content:
        "Kinder stellen bis zu 500 Fragen am Tag! AskPally antwortet geduldig, altersgerecht und fördert spielerisch Wissen, Sprachentwicklung und den Wortschatz.",
        svg: "tools",
        src: tools,
        alt: "Kind interagiert mit AskPally",
        first: true,
      },
      {
        heading: "Eltern-App",
        content:
        "Die kostenlose Begleit-App gibt Eltern volle Kontrolle über Nutzungszeiten, Gesprächsverläufe und bietet Zusammenfassungen der Gespräche sowie Anregungen für weiterführende Diskussionen.",
        svg: "dashboard",
        src: dashboard,
        alt: "AskPally Eltern-App auf einem Smartphone",
        second: true,
      },
      {
        heading: "Sicher & Geborgen",
        content:
        "AskPally ist bildschirmfrei und aus hochwertigen, GOTS-zertifizierten Materialien gefertigt. Datenschutz nach DSGVO und EU AI Act stehen bei uns an erster Stelle.",
        svg: "house",
        src: security,
        alt: "AskPally Plüschtier Detailaufnahme Material",
      },
    ]}
  />

  <DevelopmentNotice />

  <PricingSection pricing={pricing} />

  <FAQ 
    title="Häufig<br />gestellte Fragen" 
    faqs={{
      subTitle: "Alles, was Sie über AskPally wissen müssen",
      faqs: [
        {
          question: "Wann wird AskPally verfügbar sein?",
          answer: "Wir können noch kein genaues Datum nennen, aber wir arbeiten gerade intensiv an Partnerschaften und der Produktentwicklung, um AskPally so schnell wie möglich zu verwirklichen. Wir halten Sie über unseren Blog und Newsletter auf dem Laufenden."
        },
        {
          question: "Wie funktioniert AskPally?",
          answer: "AskPally ist ein interaktives Kuscheltier mit integrierter KI, das kindgerecht auf Fragen antwortet. Es fördert spielerisch Wissen und Sprachentwicklung, ohne Bildschirme zu nutzen."
        },
        {
          question: "Für welches Alter ist AskPally geeignet?",
          answer: "AskPally wurde speziell für Kinder im Alter von 3 bis 8 Jahren entwickelt, um ihre natürliche Neugier und sprachliche Entwicklung zu fördern."
        },
        {
          question: "Wie sicher sind meine Daten bei AskPally?",
          answer: "Datenschutz hat bei uns höchste Priorität. AskPally ist vollständig DSGVO-konform und entspricht den Anforderungen des EU AI Act. Alle Daten werden verschlüsselt übertragen und verarbeitet."
        },
        {
          question: "Welche Kontrolle haben Eltern über AskPally?",
          answer: "Mit der kostenlosen Begleit-App können Eltern die Nutzungszeiten festlegen, Gesprächsinhalte einsehen und Lerninhalte mitgestalten."
        },
        {
          question: "Aus welchen Materialien besteht AskPally?",
          answer: "AskPally besteht aus 100% GOTS-zertifizierter Bio-Baumwolle und ist mit recyceltem Polyester nach Global Recycled Standard gefüllt. Die Materialien sind hautfreundlich, hypoallergen und maschinenwaschbar."
        }
      ]
    }}
  />
</MainLayout>
